# OpenMemory TypeScript Monolith — Environment Variables
# No NEXT_PUBLIC_API_URL needed — API routes are co-located in the same app.

NEXT_PUBLIC_USER_ID=user

# Azure AI Foundry — LLM (required)
LLM_AZURE_OPENAI_API_KEY=
LLM_AZURE_ENDPOINT=https://<your-resource>.openai.azure.com/
LLM_AZURE_DEPLOYMENT=gpt-4o-mini
LLM_AZURE_API_VERSION=2025-01-01-preview

# Azure AI Foundry — Embeddings (required)
EMBEDDING_AZURE_OPENAI_API_KEY=
EMBEDDING_AZURE_ENDPOINT=https://<your-resource>.openai.azure.com/
EMBEDDING_AZURE_DEPLOYMENT=text-embedding-3-small
EMBEDDING_AZURE_API_VERSION=2024-02-01

# Memgraph graph store (Bolt protocol)
MEMGRAPH_URL=bolt://localhost:7687
MEMGRAPH_USERNAME=memgraph
MEMGRAPH_PASSWORD=memgraph

# Vector store — defaults to Qdrant on localhost:6333
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
